<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="false" android:state_activated="false">
	<shape>
  	<gradient android:startColor="#111111" android:endColor="#000000"/>
    <padding android:left="5dp"
             android:top="4dp"
             android:right="5dp"
             android:bottom="4dp" />

	</shape>
</item>
<item android:state_activated="true">
	<shape>
  	<gradient android:startColor="#044" android:endColor="#011"/>
    <stroke android:width="3dp" android:color="#FFFFFF" />
    <corners android:radius="6dp" />
		<padding android:left="5dp"
		         android:top="4dp"
             android:right="5dp"
             android:bottom="4dp" />

	</shape>
</item>
</selector>
