<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="false" android:state_activated="false">
	<shape>
  	<gradient android:startColor="#000" android:endColor="#111"/>
    <stroke android:width="1dp" android:color="#777777" />
    <corners android:radius="6dp" />
  	<padding android:left="3dp"
             android:top="2dp"
             android:right="3dp"
             android:bottom="2dp" />

	</shape>
</item>
<item android:state_activated="true">
	<shape>
  	<gradient android:startColor="#044" android:endColor="#011"/>
    <stroke android:width="1dp" android:color="#777777" />
    <corners android:radius="6dp" />
  	<padding android:left="3dp"
             android:top="2dp"
             android:right="3dp"
             android:bottom="2dp" />

	</shape>
</item>
</selector>
